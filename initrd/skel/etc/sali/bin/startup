#!/bin/ash

. /etc/init.d/functions

## Let's print a nice header
p_header
p_separator

## Let's gather the given kernel arguments
variableize_kernel_append_parameters
read_kernel_append_parameters

if [ -z "${VERBOSELEVEL}" ]
then
        VERBOSELEVEL=256
fi

write_variables

p_section "Initializing installation enviroment"

monitor_save_dmesg

get_arch

adjust_arch

for file in $(ls -1 /etc/sali/startup.d/)
do
	. "/etc/sali/startup.d/${file}"
	write_variables
done
