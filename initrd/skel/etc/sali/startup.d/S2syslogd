p_stage "Starting logging facilities"

p_service "Starting syslogd"

if [ -n "${LOG_SERVER}" ]
then
	p_comment 0 "starting remote syslogging"
	/sbin/syslogd -R "${LOG_SERVER}":"${LOG_SERVER_PORT}" -O /tmp/si_monitor.log -L -S
else
	p_comment 0 "starting syslogging to file"
	/sbin/syslogd -O /tmp/si_monitor.log -S
fi

p_service "Starting klogd for kernel messages"
/sbin/klogd -c 2

if [ -n "${MONITOR_SERVER}" ]
then
	p_service "Starting monitoring to your monitorserver ( ${MONITOR_SERVER} )"
	init_monitor_server
fi
