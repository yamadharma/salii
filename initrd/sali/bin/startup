#!/bin/ash

. /etc/init.d/functions

## Let's print a nice header
p_header
p_separator

## Let's gather the given kernel arguments
variableize_kernel_append_parameters
read_kernel_append_parameters

if [ -z "${VERBOSE_LEVEL}" ]
then
        VERBOSE_LEVEL=2
fi

write_variables

p_section "Initializing installation enviroment"

get_arch

for file in $(ls -1 /etc/startup.d/)
do
	. "/etc/startup.d/${file}"

	if [ $? != 0 ]
	then
		p_stage "An error has occurred in stage ${file}"
		open_console
	fi

	write_variables
done
